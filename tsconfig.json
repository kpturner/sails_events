{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "mapRoot": "./",
        "rootDir": "./",
        "watch": false,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode",
        "bin",
        "build",
        "buildtmp"
    ],
    "compileOnSave": true
}
