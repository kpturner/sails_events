<!-- E M A I L -->

<div class="control-group form-group col-xs-10"
ng-class="{'has-error':<%-form%>.email.$invalid &&
                      <%-form%>.email.$dirty}">
                        
  <label><span ng-hide="<%-form%>Form.authProvider=='dummy'">* </span>Email address</label>
